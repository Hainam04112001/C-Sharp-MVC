@using MyWebSiteBanHang.Models;

@model List<ItemGioHang>

@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
    <link href="~/Content/CssXemGioHang.css" rel="stylesheet" />
}


@if (Model == null || Model.Count == 0)
{
    <h1 style="color:#000">Giỏ hàng rỗng!</h1>
}
else
{
<table class="table-gio-hang">
    <tr>
        <td align="center" colspan="7"><p style="text-align: center; font-size: 20px; font-weight: bold;">Thông tin sản phẩm</p></td>
    </tr>
    <tr>
        <td>Mã SP</td>
        <td>Tên SP</td>
        <td>Hình ảnh</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
        <td>Hành động</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSP</td>
            <td>@item.TenSP</td>
            <td><img src="@Url.Content("~/Content/image_Laptop/"+item.HinhAnh)" width="50" height="50" /></td>
            <td>@item.SoLuong</td>
            <td>@item.DonGia.ToString("#,##") đồng</td>

            <td>@item.ThanhTien.ToString("#,##")</td>
            <td>
                @Html.ActionLink("Sửa", "SuaGioHang", new { @MaSP = item.MaSP }, new { @class = "sua-link" })
                @Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.MaSP }, new { @class = "xoa-link" })
            </td>

        </tr>
    }
</table>


    using (Html.BeginForm("DatHang", "GioHang"))
    {
        if (Session["TaiKhoan"] == null)
        {
            @*Thiết kế form lưu thông tin khách hàng đối với văng lai (Khách chưa có tài khoản)*@

            <div class="ThongTinMuaHang">
                <table class="table-thong-tin-mua-hang table table-striped table-bordered">
                    <tr>
                        <td align="center" colspan="2"><p style="text-align: center; font-size: 20px; font-weight: bold;">Thông tin khách hàng</p></td>
                    </tr>
                    <tr>
                        <td>Họ tên</td>
                        <td style="text-align:left">
                            @Html.TextBox("TenKH")
                            <p style="color:red;" id="TB_TenKH"></p>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Địa chỉ
                        </td>
                        <td>
                            @Html.TextArea("DiaChi")
                            <p style="color:red;" id="TB_DiaChi"></p>
                        </td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>
                            @Html.TextArea("Email")
                            <p style="color:red;" id="TB_Email"></p>
                        </td>
                    </tr>
                    <tr>
                        <td>Điện thoại</td>
                        <td>@Html.TextBox("SoDienThoai")</td>
                    </tr>
                    <tr>

                    </tr>
                </table>

            </div>
            <script>
                $("#btnDatHang").click(function () {
                    var loi = 0;
                    if ($("#TenKH").val() == "") {
                        $("#TB_TenKH").text("Tên khách hàng không được bỏ trống");
                        loi++;
                    }
                    else {

                        $("#TB_TenKH").text("");
                    }

                    if ($("#DiaChi").val() == "") {
                        $("#TB_DiaChi").text("Địa chỉ không được bỏ trống");
                        loi++;
                    }
                    else {
                        $("#TB_DiaChi").text("");
                    }
                    var loi;
                    dinhdang = /^[0-9A-Za-z]+[0-9A-Za-z_]*@@[\w\d.]+\.\w{2,4}$/;
                    KTemail = dinhdang.test($('#Email').val());
                    if (!KTemail) {
                        $('#TB_Email').text("Email không hợp lệ !");
                        loi++;
                    }

                    if (loi != 0) {
                        //Ngăn sự kiện submit đến server
                        return false;
                    }
                })

            </script>

        }


        <div class="divDatHang" style="text-align:right;">


            <input type="submit" value="Đặt hàng" class="btn btn-danger" id="btnDatHang" />
            @*@Html.ActionLink("Mua tiếp","Index","Home",new{ @class = "btn btn-success" })*@
            @*@Html.ActionLink("Mua tiếp","Index","Home", new {@class="btn btn-success"})*@



        </div>

    }

}




